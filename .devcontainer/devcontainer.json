// For format details, see https://aka.ms/devcontainer.json.
{
    "name": "PHP",
    "customizations": {
        "vscode": {
            "extensions": [
                // utilities
                "donjayamanne.githistory",
                "aaron-bond.better-comments",
                "EditorConfig.EditorConfig",

                // php specific
                "bmewburn.vscode-intelephense-client",
                "xdebug.php-debug",
                "SanderRonde.phpstan-vscode",
                "junstyle.php-cs-fixer",

                // javascript specific
                "dbaeumer.vscode-eslint",
                "bradlc.vscode-tailwindcss",
                "esbenp.prettier-vscode",
                "Vue.volar",
                "ms-playwright.playwright"
            ],
            "settings": {
                "php-cs-fixer.ignorePHPVersion": true,
                "[php]": {
                    "editor.defaultFormatter": "junstyle.php-cs-fixer"
                },
                "files.associations": {
                    "*.neon.dist": "yaml"
                }
            }
        }
    },
    "dockerComposeFile": "../laradock/docker-compose.yml",
    "remoteUser": "root",
    "runServices": ["nginx", "postgres"],
    "service": "workspace",
    "forwardPorts": [5173, 4173],
    "workspaceFolder": "/var/www",
    "shutdownAction": "stopCompose",
    "postCreateCommand": "composer require --dev friendsofphp/php-cs-fixer && composer require --dev ergebnis/php-cs-fixer-config"
}
